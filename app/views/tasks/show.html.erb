<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p><%= link_to "Task List", tasks_path %></p>
<p>
  <%=
    link_to "Remove",
    task_path(@task),
    method: :delete,
    data: { confirm: "Are you sure?" }
  %>
</p>
<p>
  <%=
    link_to "Edit Task",
    task_edit_path(@task)
  %>
</p>
<p>
  <%=
    link_to "Create Task",
    tasks_new_path
   %>
</p>
